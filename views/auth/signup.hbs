<div class="p-5">
   <h1>Registrate!</h1>
   <form class="form-control" action="/auth/signup" method="POST" enctype="multipart/form-data">
      <label class="p-3"> Ingrese su nombre completo
         <br>
         <input type="text" name="username" placeholder="Juanito Perez">
      </label>
      <br>
      <label class="p-3"> E-Mail
         <br>
         <input type="email" name="email" placeholder="correo@gmail.com">
      </label>
      <br>
      <label class="p-3"> Contrase√±a
         <br>
         <input type="password" name="password" placeholder="*****" minlength="6">
      </label>
      <br>
      <label class="p-3">Subir foto de perfil
         <br>
         <input type="file" name="avatar" />
      </label>
      <br>

      <button class="btn btn-primary btn-xl rounded-pill mt-5" type="submit">Registrate!</button>
   </form>

   {{#if errorMessage}}
   {{errorMessage}}
   {{/if}}

</div>
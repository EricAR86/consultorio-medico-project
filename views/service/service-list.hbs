<h1 class="p-6" >Lista de Servicios</h1>
<div class="container px-2">
    <div class="row gx-3 align-items-center">
        <div class="col-lg-6 order-lg-2">
            <div><img class="img-fluid3" src="./images/consultas/embarazada-doctor-1.jpg" alt="consulta" /></div>
        </div>
        <div class="col-lg-6 order-lg-1">
            <div class="p-1">
                {{#each services}}
                <h2>{{name}}</h2>
                <a class="btn btn-secondary rounded-pill mt-3" href="/services/{{id}}">Detalles</a>
                {{#if ../isAdmin}}
                <a class="btn btn-secondary rounded-pill mt-3" href="/services/{{id}}/edit">Editar</a>
                <form action="/services/{{id}}/delete" method="POST">
                    <button class="btn btn-primary rounded-pill mt-3">Eliminar Servicio</button>
                </form>
                {{/if}}
                <hr>
                {{/each}}
                {{#if isAdmin}}
                <a class="btn btn-primary btn-xl rounded-pill mt-3" href="/new/service">Crear un nuevo Servicio</a>
                {{/if}}
            </div>
        </div>
    </div>
</div>